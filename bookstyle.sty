% Create a new LaTeX command where upon writing \code{...}, the text inside the curly braces will be formatted in a monospaced font, colored in a Primary2 color with background color of LightPrimary.
\newcommand{\code}[1]{\colorbox{LightPrimary}{\textcolor{Primary2}{\texttt{#1}}}}

\newcommand{\todo}[1]{{\textcolor{orange}{\texttt{TODO: #1}}}}

\newtcolorbox{quotebox}[2][]{breakable,sharp corners, skin=enhancedmiddle jigsaw,parbox=false,
boxrule=0mm,leftrule=2mm,boxsep=0mm,arc=0mm,outer arc=0mm,attach title to upper,
after title={.\ }, coltitle=Primary2,colback=Primary1!10,colframe=black, title={#2},
fonttitle=\bfseries,#1}

\newtcolorbox{refbox}[2][]{breakable, skin=enhancedmiddle jigsaw,parbox=false,
boxrule=0mm,leftrule=2mm,boxsep=0mm,arc=0mm,outer arc=0mm,attach title to upper,
after title={}, coltitle=Primary2,colback=yellow!10,colframe=black, title={#2},
fonttitle=\bfseries,#1}

\newtcolorbox{alertbox}[2][]{breakable, skin=enhancedmiddle jigsaw,parbox=false,
